<section class="panel">
  <h2>Key Metrics</h2>
  <div class="kpi-grid">
    <div class="kpi-card">
      <div class="kpi-label">Rows</div>
      <div id="kpi-rows" class="kpi-value">—</div>
    </div>
    <div class="kpi-card">
      <div class="kpi-label">MB/s</div>
      <div id="kpi-mbs" class="kpi-value">—</div>
    </div>
    <div class="kpi-card">
      <div class="kpi-label">Tokens/sec</div>
      <div id="kpi-tokens" class="kpi-value">—</div>
    </div>
    <div class="kpi-card">
      <div class="kpi-label">Allocs/sec</div>
      <div id="kpi-allocs" class="kpi-value">—</div>
    </div>
    <div class="kpi-card">
      <div class="kpi-label">p95 (ms)</div>
      <div id="kpi-p95" class="kpi-value">—</div>
    </div>
    <div class="kpi-card">
      <div class="kpi-label">Peak RSS (MB)</div>
      <div id="kpi-rss" class="kpi-value">—</div>
    </div>
    <div class="kpi-card">
      <div class="kpi-label">CPU</div>
      <div id="kpi-cpu" class="kpi-value">—</div>
    </div>
    <div class="kpi-card kpi-meta">
      <div class="kpi-label">File</div>
      <div id="kpi-file" class="kpi-value truncate">—</div>
      <div class="kpi-sub">
        <span id="kpi-type" class="pill">—</span>
        <span id="kpi-size" class="pill">—</span>
        <span id="kpi-etag" class="pill truncate">—</span>
      </div>
    </div>
  </div>
</section>
